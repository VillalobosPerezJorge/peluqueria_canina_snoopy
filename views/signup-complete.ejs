<!DOCTYPE html>
<html lang="es">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Registro completado con exito</title>
        <!-- BOOTSTRAP CSS only-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- CSS PROPIO -->
        <link rel="stylesheet" href="/public/css/st_contacto.css" type="text/css">
        <!-- font-awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Navigation bar -->
    <%- include('./partials/navigation.ejs') %>
    <!-- Navigation bar -->

        <% if (locals.title && locals.detail && locals.image_name) { %>
        <div>
            <div class="container d-flex flex-column justify-content-center align-items-center my-5 py-5">
                <img src="../public/images/<%= image_name %>" alt="<%= image_name %> icon">
                <h1 id="title" class="text-center"><%= title %></h1>
                <p id="detail" class="text-center"><strong><%= detail %></strong></p>
                <a href="/"><button id="btn_volver" class="btn btn-info text-white mb-4" type="button">volver al inicio</button></a>
            </div>
        </div>
        <% } %>

        <!-- Footer -->
        <%- include('./partials/footer.ejs') %>
        <!-- Fin Footer -->

        <!-- JavaScript dependencies -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    </body>
</html>
