<!DOCTYPE html>
<html lang="es">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Formulario Ingreso Mascota</title>
        <!-- BOOTSTRAP CSS only-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- CSS PROPIO -->
        <link rel="stylesheet" href="/public/st_contacto.css" type="text/css">
        <!-- font-awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <!-- Navigation bar -->
        <nav class="navbar navbar-expand-lg fs-5" style="background-color: #E799A3;">
            <div class="container-fluid" style="background-color: #E799A3;">
            <a class="navbar-brand fs-2" href="/">
                <img src="/public/logo.png" width="50" height="50" class="d-inline-block align-top" alt="">
                Peluquería Canina Snoopy
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/nosotros">Sobre nosotros</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/galeria">Galería de trabajos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/contacto">Contacto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/servicios">Servicios</a>
                </li>
                </ul>
                <div class="d-flex">
                <div class="btn-group">
                    <a href="https://api.whatsapp.com/message/IKSQLN7ZJCN2N1?autoload=1&app_absent=0" class="me-4 text-reset"><button class="btn btn-success me-2 fs-5" type="button" href="">¡Agenda una hora!</button></a>
                    
                    <a href="/iniciar_sesion"><button class="btn btn-outline-primary me-2 fs-5" type="button">Iniciar sesión</button></a>
                    <a href="/registrarse"><button class="btn btn-outline-primary me-2 fs-5" type="button">Registrarse</button></a>
                </div>
                </div>
            </div>
            </div>
        </nav>
        <!-- Navigation bar -->

        <% if (locals.title && locals.detail && locals.image_name) { %>
        <div>
            <div class="container d-flex flex-column justify-content-center align-items-center" style="margin-top:80px">
            <img src="../public/<%= image_name %>" alt="<%= image_name %> icon">
            <h1 id="title" class="text-center"><%= title %></h1>
            <p id="detail" class="text-center"><strong><%= detail %></strong></p>
            <a href="http://localhost:3001/"><button id="btn_volver" class="btn btn-info text-white mb-4" type="button">volver al inicio</button></a>
        </div>
        <% } %>

        <!-- JavaScript dependencies -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    </body>
</html>
