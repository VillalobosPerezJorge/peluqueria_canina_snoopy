   <style>
     .navbar {
       margin: 0;
       border-radius: 0;
     }
     body {
       text-justify: auto;
       font-family: 'Lucida Sans';
       background-image: url('/public/fondo2.jpg');
       background-repeat: repeat; 
     }
  
    footer {
      background-color: #f2f2f2;
      padding: 25px;
    }

